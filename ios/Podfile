# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Optional: pin Firebase iOS SDK version (remove this line if you want CocoaPods to resolve latest)
$FirebaseSDKVersion = '10.23.0'

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  # If you prefer CocoaPods to pick the Firebase SDK, comment the line below
  # $FirebaseSDKVersion='10.23.0'
end

target 'ImageNotification' do
  use_frameworks!
  # Keep explicit pods for this target if you need them
  pod 'Firebase/Messaging'
  pod 'GoogleUtilities/Environment'
  pod 'GoogleUtilities/Logger'
  pod 'GoogleUtilities/Network'
  pod 'GoogleUtilities/UserDefaults'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Fix BoringSSL-GRPC compiler flags issue (keeps your previous logic)
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end

    # Apply Flutter's additional iOS build settings helper
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Make sure every pod target uses the same (high-enough) iOS deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'

      # Avoid bitcode problems on CI / Xcode settings
      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # If running on Apple Silicon CI or building simulator slices on macOS runners,
      # exclude arm64 for the simulator to avoid architecture mismatch errors:
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'

      # Keep any preprocessor definitions you already had
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        ## dart: PermissionGroup.camera
        'PERMISSION_CAMERA=1',
        ## dart: PermissionGroup.photos
        'PERMISSION_PHOTOS=1',
        ## dart: [PermissionGroup.location, PermissionGroup.locationAlways, PermissionGroup.locationWhenInUse]
        'PERMISSION_LOCATION=1',
        ## dart: PermissionGroup.notification
        'PERMISSION_NOTIFICATIONS=1',
        ## dart: PermissionGroup.mediaLibrary
        'PERMISSION_MEDIA_LIBRARY=1',
      ]
    end
  end

  # Keep any Flutter-supplied post install workaround if present
  __apply_Xcode_12_5_M1_post_install_workaround(installer) if defined?(__apply_Xcode_12_5_M1_post_install_workaround)
end
